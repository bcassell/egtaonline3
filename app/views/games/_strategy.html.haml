%tr
  %td{:class => ("hidden unselected" unless role.strategies.include? strategy)}= strategy
  %td.hidden#add_or_remove_strategy_link
    -if role.strategies.include? strategy
      = link_to 'Remove Strategy', "/games/#{game.id}/roles/#{role.name}/remove_strategy?strategy=#{strategy}", method: :post, class: 'btn btn-mini btn-warning'
    -else
      = link_to 'Add Strategy', url_for({ action: :add_strategy, controller: :roles, id: role.name, game_id: role_owner.id, "#{role.name}_strategy".to_sym => strategy }), method: :post, class: 'btn btn-mini btn-info'
