= show_for simulator do |u|
  %h3 Simulator Configuration
  = u.attribute :name
  = u.attribute :version
  = u.attribute :email
  = render partial: 'configuration/parameter', collection: simulator.configuration.to_a, locals: { u: u }
= link_to "Edit Simulator", edit_simulator_path(simulator), class: 'btn btn-primary'
= link_to "Destroy Simulator", simulator, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger'
= link_to "Download Simulator Zip", simulator_download_zip_path(simulator), class: 'btn btn-primary'
